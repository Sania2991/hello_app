<% provide(:title, @user.name) %>
<div class="row" style=" background-color: gray">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8" style=" background-color: darkgray">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>      <!-- явно указ. p_470 -->
    <% end %>
  </div>
</div>